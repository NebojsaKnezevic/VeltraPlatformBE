
{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "paths": {
      "db/*": ["db/*"]
    },
    },
    "include": ["src/**/*"]
}